<div class="customer_body">
  <div class="container">
    <div class="row py-3">
      <div class="col-11 mx-auto">
        <div class="d-flex mt-3 mb-3">
          <h5 class="font-weight-bold p-1 mr-4 mb-0">登録者情報</h5>
        </div>
          <% if @user.image? %>
            <%= image_tag @user.image.thumb.url, class: "user-icon" %>
          <% else %>
            <%= image_tag "default.jpg", alt: "user-icon", size: "200", class: "user-icon" %>
          <% end %>

        <table class="col-7 table table-bordered mt-3 customer_table shadow mb-5">
          <tr>
            <th class="table-secondary">氏名</td>
            <td class="table-light"><%= @user.name %>
          </tr>
          <tr>
            <th class="table-secondary">メールアドレス</td>
            <td class="table-light"><%= @user.email %></td>
          </tr>
        </table>
          <%= link_to  edit_user_path, class:"btn btn-md btn-success shadow" do %>
            <i class="fas fa-user-cog mb-1"></i>編集する
          <% end %>
      </div>
    </div>
  </div>
</div>